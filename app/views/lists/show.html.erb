<div class="container">
  <div class="d-flex align-items-start flex-column align-items-center m-5" style="height: 200px;">
    <div class="card-category d-flex align-self-stretch m-1" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @list.photo.key, height: 300, crop: :fill %>')">
      <p class="d-flex justify-content-center"><%= @list.name.capitalize %></p>
    </div>
  </div>
</div>

  <div class="cards d-flex justify-content-center">
    <div class="row col-sm-12 d-flex .align-content-start">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card m-2" style="width: 25rem;">
          <img class="card-img-top mt-2" src="<%= bookmark.movie.poster_url %>" alt="">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"> <strong> <%= bookmark.movie.title %> </strong> </h5>
              <p class="card-text">  <%= bookmark.movie.overview %></p>
              <p class="card-text"> <strong>Rating:</strong> <%= bookmark.movie.rating %></p>
              <p class="card-text"> <strong>Comment:</strong> <%= bookmark.comment %></p>
              <%= link_to "Delete this movie", bookmark_path(bookmark), :class => "btn btn-outline-danger btn-sm d-flex justify-content-center mt-auto", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this movie?" } %>
            </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="container d-flex justify-content-around mb-5 mt-3">

  <%= link_to "Add a movie to this watchlist", new_list_bookmark_path(@list), :class => "btn btn-outline-secondary" %>
  <%= link_to "Delete this watchlist", list_path(@list), :class => "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
</div>
